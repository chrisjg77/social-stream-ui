{{#is action 'default'}}
    <div class="break-left animated bounceInLeft">
      <a href="#"><h1 class="app-title">{{{conf.site.title}}}</h1></a>
    </div>
    <div class="break-right animated bounceInRight">
      <nav class="header-nav nav-large">
        <button class="btn round" id="login">Log In</button>
        <button class="btn round btn-emphasis" id="add-item">Add</button>
        <button href="#" class="btn app-nav-handle" id="open-nav"><span class="ion ion-more"></span></button>
      </nav>
      <nav class="header-nav nav-mobile">
        <button class="btn round btn-emphasis" id="add-item">Add</button>
      </nav>
    </div>
{{/is}}

{{#is action 'editor'}}
  <div class="toolbar toolbar-editor">
    <div class="break-left animated bounceInLeft">
      <ul class="toolbar-list list-progress">
        <li><a class="complete" href="#"><span class="step-number">1</span> Upload</a></li>
        <li><a href="#"><span class="step-number">2</span> Edit</a></li>
        <li><a href="#"><span class="step-number">3</span> Publish</a></li>
      </ul>
      {{!-- <div class="progress-meter"></div> --}}
    </div>
    <div class="break-right animated bounceInRight">
      <div class="actions-user">
        <button class="btn round" id="cancel-item">Cancel</button>
        <button class="btn round btn-emphasis" id="add-to-stream" style="display: none;">Add To Stream</button>
        <button class="btn round btn-emphasis" id="publish-item" style="display: none;">Publish</button>
        {{!-- <button class="btn round btn-emphasis" id="publish-item">Publish</button> --}}
      </div>
    </div>
  </div>
{{/is}}
